<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.url">YOUR_URL</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">YOUR_USERNAME</property>
        <property name="connection.password">YOUR_PASSWORD</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="cinema.project.model.Movie"/>
        <mapping class="cinema.project.model.CinemaHall"/>
        <mapping class="cinema.project.model.MovieSession"/>
        <mapping class="cinema.project.model.User"/>
        <mapping class="cinema.project.model.Ticket"/>
        <mapping class="cinema.project.model.ShoppingCart"/>
        <mapping class="cinema.project.model.Order"/>
    </session-factory>
</hibernate-configuration>
